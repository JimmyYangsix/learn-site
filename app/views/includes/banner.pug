// banner
.banner
  // banner Slider starts Here
  script(src='js/responsiveslides.min.js')
  script.
    // You can also use "$(window).load(function() {"
    $(function () {
    // Slideshow 4
    $("#slider3").responsiveSlides({
    auto: true,
    pager: true,
    nav: true,
    speed: 500,
    namespace: "callbacks",
    before: function () {
    $('.events').append("<li>before event fired.</li>");
    },
    after: function () {
    $('.events').append("<li>after event fired.</li>");
    }
    });
    });
  // //End-slider-script
  #top.callbacks_container
    ul#slider3.rslides
      each item in results
        li
          .banner-bg
            .container
              .banner-info
                h3
                  | #{item[0].title}
                p
                  | #{item[0].description}
                a(href='/course/detail/'+item[0]._id)
